@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Services.Configuration

@model Nop.Web.Models.Common.SocialModel

@{
    var storeId = EngineContext.Current.Resolve<IStoreContext>().CurrentStore.Id;
    var settingService = EngineContext.Current.Resolve<ISettingService>();
    var pinterestUrl = settingService.GetSettingByKey("uptownthemesettings.pinteresturl", String.Empty, storeId, true);
    var vimeoUrl = settingService.GetSettingByKey("uptownthemesettings.vimeourl", String.Empty, storeId, true);
    var instagramUrl = settingService.GetSettingByKey("uptownthemesettings.instagramurl", String.Empty, storeId, true);
}

<ul class="social-sharing">
    @if (!String.IsNullOrEmpty(Model.TwitterLink))
    {
        <li>
            <a target="_blank" class="twitter" href="@Model.TwitterLink">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (!String.IsNullOrEmpty(instagramUrl))
    {
        <li>
            <a target="_blank" class="instagram" href="@instagramUrl">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (!String.IsNullOrEmpty(Model.FacebookLink))
    {
        <li>
            <a target="_blank" class="facebook" href="@Model.FacebookLink">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (!String.IsNullOrEmpty(Model.YoutubeLink))
    {
        <li>
            <a target="_blank" class="youtube" href="@Model.YoutubeLink">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (!String.IsNullOrEmpty(Model.GooglePlusLink))
    {
        <li>
            <a target="_blank" class="google" href="@Model.GooglePlusLink">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (!String.IsNullOrEmpty(pinterestUrl))
    {
        <li>
            <a target="_blank" class="pinterest" href="@pinterestUrl">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (!String.IsNullOrEmpty(vimeoUrl))
    {
        <li>
            <a target="_blank" class="vimeo" href="@vimeoUrl">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
    @if (Model.NewsEnabled)
    {
        <li>
            <a target="_blank" class="rss" href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})">
                <span class="flip"></span>
                <span class="flop"></span>
            </a>
        </li>
    }
</ul>