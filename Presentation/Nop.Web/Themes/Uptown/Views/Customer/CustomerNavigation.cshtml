@model CustomerNavigationModel
@using Nop.Web.Models.Customer;
<div class="account-navigation-wrapper">
    <ul class="account-navigation-list">
        @Html.Widget("account_navigation_before")
        @foreach (var item in Model.CustomerNavigationItems)
        {
            <li>
                <a href="@Url.RouteUrl(item.RouteName)" class="@item.ItemClass @(Model.SelectedTab == item.Tab ? "active" : "inactive")">@(item.Title)</a>
            </li>
        }
        @Html.Widget("account_navigation_after")
    </ul>
</div>