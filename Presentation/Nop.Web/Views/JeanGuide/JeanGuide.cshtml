@model List<JeanGuideCategoryModel>
@using Nop.Web.Models.Common;
@*NOP 3.832*@
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.JeanGuide").Text);
    //page class
    Html.AddCssFileParts(ResourceLocation.Head, "/Content/css/jeanguide.css");
}
<div class="page contact-page">
    <div class="page-title">
        <h1>@(Model.FirstOrDefault().Genre == "Woman" ? T("JeanGuide.Woman").Text : T("JeanGuide.Man").Text) </h1>
    </div>
    <div class="page-body">
        <div class="jeanguide-category-main">
    @foreach (var item in Model)
            {
        <a href="JeanGuideDetail?jeanGuideId=@item.Id">
            <div class="jeanguide-category">
                <div class="jeanguide-header">
                    <h3>@item.Name</h3>
                </div>
                <div class="jeanguide-description">
                    <h5>@item.Description</h5>
                </div>
                <div class="jeanguide-image-wrapper">
                    <img src="@item.ImageUrl" />
                </div>
                
            </div>
        </a>
            }
        </div>
    </div>
</div>
